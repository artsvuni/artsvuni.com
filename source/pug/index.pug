  body
    .wrap
      .grs
        .grs__top
          a.grs__link.instagram-link(href="https://www.instagram.com/alexander.artsvuni" target="_blank") Instagram
          a.grs__link.medium-link(href="https://medium.com/@artsvuni" target="_blank") Medium
